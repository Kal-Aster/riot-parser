{
  "name": "riot-tag-parser",
  "version": "0.0.6",
  "description": "The parser for Riot tags",
  "main": "./dist/tag-parser.js",
  "module": "./lib/index.js",
  "jsnext:main": "./lib/index.js",
  "typings": "./index.d.ts",
  "license": "MIT",
  "engines": {
    "node": ">=4.2",
    "npm": ">=3.0"
  },
  "scripts": {
    "test": "mocha ./test/index.js",
    "pretest": "npm run build",
    "lint": "tslint -p ./ --type-check \"src/**/*.ts\"",
    "test-size": "npm run build && uglifyjs dist/*.js -m -c --wrap=p > test/_1.js && ls -A -l test/_*.js",
    "build": "rm -rf lib/* && tsc && rm -rf dist/* && rollup -c",
    "samples": "node ./test/samples.js",
    "prepublish": "npm run build"
  },
  "files": [
    "*.ts",
    "*.js",
    "dist/",
    "lib/"
  ],
  "keywords": [
    "html",
    "html5",
    "tag",
    "parser",
    "javascript"
  ],
  "author": {
    "name": "aMarCruz",
    "email": "amarcruz@yahoo.com",
    "url": "https://github.com/aMarCruz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/riot/parser"
  },
  "homepage": "https://github.com/riot/parser",
  "bugs": "https://github.com/riot/parser/issues",
  "readme": "https://github.com/riot/parser/blob/master/README.md",
  "devDependencies": {
    "expect": "^1.20.2",
    "mocha": "^3.4.2",
    "rollup": "^0.45.0",
    "rollup-plugin-alias": "^1.3.1",
    "rollup-plugin-cleanup": "^1.0.1",
    "rollup-plugin-jscc": "^0.3.3",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1"
  },
  "dependencies": {
    "skip-regex": "^0.3.0"
  }
}
