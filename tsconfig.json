{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    //"declaration": true,
    //"sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "noEmitOnError": true,
    "preserveConstEnums": true,
    "charset": "utf8",
    "newLine": "LF",
    "pretty": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    //"traceResolution": true,
    "experimentalDecorators": false
  },
  "files": [
    "./types.d.ts",
    "./src/index.ts"
  ]
}
